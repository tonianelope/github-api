<h1>Github Visualisation</h1>

<input name="like" id="like" value="Login to Github" type="submit" onclick="location.href = '/user/login';"/>

<form action="/repo"  method="post">
    Repo Name: <input type="text" name="repo" value=""><br>
    <input type="submit" value="Submit">
</form>

<form action="/load" method="get">
    <select data-style="btn-info" name="repo">
        {{#each repos}}
            <option value={{path}}>{{name}}</option>
        {{/each}}
    </select>
    <input type="submit" value="Submit">
</form>
